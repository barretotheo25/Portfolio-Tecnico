package com.example.pet_shop;

import androidx.appcompat.app.AppCompatActivity;

import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.RadioButton;
import android.widget.Toast;

public class TelaCadastroPet extends AppCompatActivity {
    private static int cod;
    Button cachorro, gato, hamster, coelho, peixe, passaro;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_tela_cadastro_pet);
        getSupportActionBar().hide();
        cachorro = findViewById(R.id.cachorro);
        gato = findViewById(R.id.gato);
        hamster = findViewById(R.id.hamster);
        coelho = findViewById(R.id.coelho);
        peixe = findViewById(R.id.peixe);
        passaro = findViewById(R.id.passaro);
    }

    public void cadastroCachorro(View view) {
        Intent i = new Intent(this, CadastroCachorro.class);
        if (cachorro.isPressed()) {
            TelaCadastroPet.cod = 1;
            startActivity(i);
        }
    }

    public void cadastroGato(View g){
        if (gato.isPressed()){
            Toast.makeText(this, "Esta página não está pronta ainda, infelizmente.", Toast.LENGTH_LONG).show();
        }
    }

    public void cadastroHamster(View g){
        if (hamster.isPressed()){
            Toast.makeText(this, "Esta página não está pronta ainda, infelizmente.", Toast.LENGTH_LONG).show();
        }
    }

    public void cadastroPassaro(View g){
        if (passaro.isPressed()){
            Toast.makeText(this, "Esta página não está pronta ainda, infelizmente.", Toast.LENGTH_LONG).show();
        }
    }

    public void cadastroPeixe(View g){
        if (peixe.isPressed()){
            Toast.makeText(this, "Esta página não está pronta ainda, infelizmente.", Toast.LENGTH_LONG).show();
        }
    }

    public void cadastroCoelho(View g){
        if (coelho.isPressed()){
            Toast.makeText(this, "Esta página não está pronta ainda, infelizmente.", Toast.LENGTH_LONG).show();
        }
    }
}
